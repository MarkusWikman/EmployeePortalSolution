@using EmployeePortal.Web.Models.Entities;
@model EmployeePortal.Web.Models.AddEmployeeViewModel;

<h1>Add Employee</h1>

<form method="post">
<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name"/>
</div>

<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="text" class="form-control" asp-for="Email"/>
</div>

<div class="mt-3">
    <label class="form-label">Phone</label>
    <input type="text" class="form-control" asp-for="Phone"/>
</div>

<div class="mt-3">
    <label class="form-label">Position</label>
    <select class="form-control" id="roleSelect" asp-for="Position">
        @foreach (var position in Enum.GetValues(typeof(Position)))
        {
            <option value="@position">@position</option>
        }
    </select>
</div>

<div class="mt-3">
    <label class="form-label">Salary</label>
    <input type="number" step="0.01" class="form-control" asp-for="Salary"/>
</div>


<div class="mt-3">
    <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed"/>
    <label class="form-check-label" for="Subscribed">Subscribed</label>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>